{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["xo", "plugin:react/recommended"],
	"overrides": [
		{
			"extends": ["xo-typescript"],
			"files": ["*.ts", "*.tsx"]
		}
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["react", "@stylistic/js"],
	"rules": {
		"comma-dangle": [
			"error",
			{
				"arrays": "never",
				"objects": "always",
				"imports": "never",
				"exports": "never",
				"functions": "never"
			}
		]
	}
}

